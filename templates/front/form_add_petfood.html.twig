{% extends 'base.html.twig' %}

{% block body %}




 <h1 class="titrepage">Ajouter un produit</h1>

 {# j'affiche mon formulaire avec la fonction twig form, et en parametre le formulaire envoyé
      depuis le controleur
   #}

 {# pour rendre directement tout le formulaire, on utilise la fonction twig form() #}

 {#
     pour plutôt décomposer le formulaire et avoir la main sur chaque input / label
     on utilise les fonctions form_start() et form_end pour la balise form,
     puis form_widget() et form_label() sur chacun des champs.
    Je peux utiliser en second argument de ces fonction un objet 'attr' pour
    gérer les classes, id etc des inputs
  #}
 {{ form_start(addPetFoodForm) }}

 {{ form_label(addPetFoodForm.name, 'Nom du produit') }}
 {{ form_widget(addPetFoodForm.name) }}
 {{ form_errors(addPetFoodForm.name)}}


 {{ form_label(addPetFoodForm.percent_proteine, 'Taux de protéines') }}
 {{ form_widget(addPetFoodForm.percent_proteine) }}
 {{ form_errors(addPetFoodForm.percent_proteine)}}

 {{ form_label(addPetFoodForm.percent_fat, 'Taux de matières grasses') }}
 {{ form_widget(addPetFoodForm.percent_fat) }}
 {{ form_errors(addPetFoodForm.percent_fat)}}

 {{ form_label(addPetFoodForm.percent_ashes, 'Taux de cendres') }}
 {{ form_widget(addPetFoodForm.percent_ashes, {'attr': {'class': 'input_book'}}) }}
 {{ form_errors(addPetFoodForm.percent_ashes)}}

 {{ form_label(addPetFoodForm.brand, 'Marque') }}
 {{ form_widget(addPetFoodForm.brand) }}
 {{ form_errors(addPetFoodForm.brand)}}

 {{ form_label(addPetFoodForm.percent_carbohydrates, 'Taux de glucides') }}
 {{ form_widget(addPetFoodForm.percent_carbohydrates) }}
 {{ form_errors(addPetFoodForm.percent_carbohydrates)}}

 {{ form_label(addPetFoodForm.ean, 'Code barre') }}
 {{ form_widget(addPetFoodForm.ean) }}
 {{ form_errors(addPetFoodForm.ean)}}

 {{ form_label(addPetFoodForm.ingredient_1, 'Ingrédient n°1') }}
 {{ form_widget(addPetFoodForm.ingredient_1) }}
 {{ form_errors(addPetFoodForm.ingredient_1)}}

 {{ form_label(addPetFoodForm.ingredient_2, 'Ingrédient n°2') }}
 {{ form_widget(addPetFoodForm.ingredient_2) }}
 {{ form_errors(addPetFoodForm.ingredient_2)}}

 {{ form_label(addPetFoodForm.ingredient_3,'Ingrédient n°3') }}
 {{ form_widget(addPetFoodForm.ingredient_3) }}
 {{ form_errors(addPetFoodForm.ingredient_3)}}

 {{ form_widget(addPetFoodForm.submit,{ 'label': 'Ajouter' }) }}


 {{ form_end(addPetFoodForm) }}



{% endblock %}
