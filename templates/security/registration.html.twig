{% extends 'base.html.twig' %}
{% block body %}
<h1>Inscription</h1>
    {{ form_start(form) }}

    {{ form_row(form.username, {'label' : 'Votre Prénom','attr':{'placeholder' : 'Prénom'}}) }}
    {{ form_row(form.pseudo) }}
    {{ form_row(form.email) }}
    {{ form_row(form.password) }}
    {{ form_row(form.confirm_password) }}
    {{ form_row(form.TypeAnimal) }}

    {{ form_widget(form) }}

    <button type="submit" class="btn btn-success">Inscription</button>


    {{ form_end(form ) }}
{% endblock %}